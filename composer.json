{
	"name": "interexperts/pdo",
	"homepage": "https://github.com/interexperts/framework-pdo",
	"license": "MIT",
    "description": "Wrapper for PDO objects",
	"autoload": {
		"psr-4": {
			"InterExperts\\PDO\\": "src/"
		}
	},
	"require-dev": {
		"phpunit/phpunit": "4.5.*",
		"phpmd/phpmd" : "@stable"
	},
    "platform":{
        "ext-pdo": "*"
    },
    "suggest": {
        "ext-pdo_dblib": "For MSSQL or Sybase databases on Linux/UNIX platform",
        "ext-pdo_mysql": "For MySQL or MariaDB databases"
    },
	"repositories": [
		{
			"type": "vcs",
			"url": 	"git@github.com:interexperts/framework-config.git"
		}
	],
	"require": {
		"interexperts/config": "~1.0"
	}
}
